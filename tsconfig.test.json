{
    "compilerOptions": {
        "outDir": "build",
        "module": "CommonJS",
        "lib": ["dom", "es2015", "ESNext"],
        "types": ["node"],
        "target": "ES2019",
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ]
  }